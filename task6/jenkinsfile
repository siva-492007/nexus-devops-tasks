pipeline {
    agent any
    stages{
        stage('Starting wordpress ami build'){
            steps{
                echo "Build wordpress ami using packer"
            }
        }

        stage('Initialize packer'){
            steps{
                sh "packer init ."
            }
        }

        stage('Build Wordpress AMI'){
            steps{
                withAWS(credentials: 'aws_pvs4_cli', region: 'us-east-1'){
                    sh "packer build aws-ubuntu.pkr.hcl"
                }
            }
        }
    }
}